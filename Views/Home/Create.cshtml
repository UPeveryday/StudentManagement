
@model Student
@inject IstudentRespository _studentRespository
@{
    ViewBag.Title = "创建学生信息";
}
    <form asp-controller="home" asp-action="create" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>@*@//为name infut 服务*@
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="请输入姓名" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="请输入Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>
        @*<div class="form-group row">
            <label asp-for="ClassNeme" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="ClassNeme" asp-items="Html.GetEnumSelectList<ClassName>()"  class="custom-select mr-sm-2" />
            </div>
        </div>*@
        <div class="form-group row">
            <label asp-for="ClassNeme" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="ClassNeme" asp-items="Html.GetEnumSelectList<ClassName>()" class="custom-select mr-sm-2"></select>
                <span asp-validation-for="ClassNeme" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">创建</button>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                学生信息总人数=@_studentRespository.GetStudents().Count().ToString();
            </div>
        </div>
    </form>